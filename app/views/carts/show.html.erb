<% content_for :title, "Your Cart" %>

<div class="space-y-4">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Your Cart</h1>
    <p class="text-gray-600">Review items and proceed to checkout.</p>
  </div>

  <% if @cart.cart_items.any? %>
    <%= render @cart %>
  <% else %>
    <div class="bg-white rounded-2xl border border-gray-100 shadow-md p-6 text-center text-gray-600">
      <p class="mb-3">Your cart is empty.</p>
      <%= link_to "Browse products", products_path, class: "px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow-sm" %>
    </div>
  <% end %>
</div>
