<div id="<%= dom_id cart_item %>" class="flex py-6 border-b border-gray-200">
  <div class="size-24 shrink-0 overflow-hidden rounded-md border border-gray-200">
    <%= image_tag(cart_item.product.image.presence || "https://via.placeholder.com/100", class: "size-full object-cover") %>
  </div>

  <div class="ml-4 flex flex-1 flex-col">
    <div class="flex justify-between text-base font-medium text-gray-900">
      <h3 class="truncate max-w-sm">
        <%= link_to cart_item.product.name, product_path(cart_item.product) %>
      </h3>
      <p class="ml-4">$<%= cart_item.product.price %></p>
    </div>
    <div class="flex flex-1 items-end justify-between text-sm">
      <p class="text-gray-500">Qty <%= cart_item.quantity %></p>
      <div class="flex gap-2">
        <%= button_to "Remove", cart_item_path(cart_item), method: :delete, data: { confirm: "Remove item?" }, class: "btn btn-sm btn-outline" %>
      </div>
    </div>
  </div>
</div>
