<div id="<%= dom_id order %>" class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Order #<%= order.id %></h1>
      <p class="text-sm text-gray-500">Placed on <%= order.created_at.strftime("%b %d, %Y %H:%M") %></p>
    </div>
    <span class="px-3 py-1 rounded-full text-sm font-semibold bg-indigo-50 text-indigo-700"><%= order.status.to_s.titleize.presence || "Pending" %></span>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-100">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">#</th>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Book</th>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Price</th>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Qty</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 bg-white">
        <% order.cart_items.each_with_index do |item, i| %>
          <tr>
            <td class="px-4 py-3 text-sm text-gray-700"><%= i + 1 %></td>
            <td class="px-4 py-3 text-sm text-gray-900 font-medium flex items-center gap-3">
              <%= image_tag(item.product.image.presence || "https://via.placeholder.com/80", class: "w-14 h-14 rounded-lg object-cover border border-gray-100") %>
              <%= item.product.name %>
            </td>
            <td class="px-4 py-3 text-sm font-semibold text-indigo-700">$<%= item.product.price %></td>
            <td class="px-4 py-3 text-sm text-gray-800"><%= item.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
