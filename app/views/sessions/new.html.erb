<div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
  <div class="text-center space-y-2">
    <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/7/73/Ruby_logo.svg", class: "mx-auto h-12 w-auto" %>
    <h2 class="text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
    <p class="text-gray-600 text-sm">Welcome back! Please enter your credentials.</p>
  </div>

  <div class="mt-8">
    <%= form_with url: login_path, method: :post, local: true, class: "space-y-5" do %>
      <div class="space-y-2">
        <%= label_tag :name, "Username", class: "block text-sm font-semibold text-gray-700" %>
        <%= text_field_tag :name, "", class: "w-full rounded-xl border border-gray-200 bg-white px-4 py-2.5 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <div class="space-y-2">
        <%= label_tag :password, "Password", class: "block text-sm font-semibold text-gray-700" %>
        <%= password_field_tag :password, "", class: "w-full rounded-xl border border-gray-200 bg-white px-4 py-2.5 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200" %>
      </div>

      <% if flash[:alert].present? %>
        <p class="text-sm text-center font-semibold text-red-600"><%= flash[:alert] %></p>
      <% end %>

      <%= submit_tag "Sign In", class: "w-full flex justify-center rounded-xl bg-indigo-600 hover:bg-indigo-700 px-4 py-3 text-sm font-semibold text-white shadow-md transition" %>
    <% end %>
    <p class="mt-6 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to "Create a new account", signup_path, class: "font-semibold text-indigo-600 hover:text-indigo-800" %>
    </p>
  </div>
</div>
