<% content_for :title, @user.name %>

<div class="card bg-base-100 shadow-xl p-6">
  <h1 class="text-2xl font-bold mb-2"><%= @user.name %></h1>
  <p class="text-gray-700"><%= @user.email %></p>
  <p class="mt-2"><strong>Admin:</strong> <%= @user.admin? ? "Yes" : "No" %></p>
</div>

<div class="mt-4 flex gap-3">
  <%= link_to "View Cart", cart_path(@user.cart), class: "btn" if @user.cart %>
  <%= link_to "Order History", orders_path, class: "btn" %>
</div>
